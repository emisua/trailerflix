---
import Layout from '../../layouts/Layout.astro'
import { getMovieByID } from '../../api/api'

const { id } = Astro.params
const movie = await getMovieByID(id!)

const movieURL = `https://image.tmdb.org/t/p/w500${movie?.backdrop_path}`
---

<Layout title={movie.original_title}>
  <div
    class={`min-h-[20rem] bg-[url('${movieURL}')] w-full bg-no-repeat bg-cover bg-center`}
  >
  </div>
  <h1 class='text-white'>{movie.original_title}</h1>
</Layout>
