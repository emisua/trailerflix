---
import type { Movie } from "../types/types";
import MovieCard from "./MovieCard";

interface Props {
  movieList: Movie[];
}
const { movieList } = Astro.props;
---

<ul
  role="list"
  class="grid grid-cols-2 md:grid-cols-[repeat(auto-fill,minmax(200px,1fr))] gap-4 p-4"
  '
>
  {movieList?.map((movie) => <MovieCard movie={movie} />)}
</ul>
