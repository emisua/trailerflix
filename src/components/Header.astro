---
import SearchInput from "./SearchInput";
interface Props {
  fixed: boolean;
}
const { fixed } = Astro.props;
---

<header
  class={`${fixed && "fixed"} w-full container max-w-screen-lg mx-auto p-4`}
>
  <nav class="flex justify-between items-center gap-4">
    <a class="logo text-white font-black text-2xl flex-1 w-1/2" href="/"
      >The TRAILERS</a
    >
    <div class="search flex-1 w-1/2">
      <SearchInput client:load />
    </div>
  </nav>
</header>
