---
import type { Movie } from "../types/types";

interface Props {
  movie: Movie;
}

const { movie } = Astro.props;
const movieURL = `https://image.tmdb.org/t/p/w500/${movie?.poster_path}`;
console.log({ movie, movieURL });
---

<li
  class="p-4 rounded-lg bg-neutral-900 text-neutral-300 shadow-xl hover:bg-neutral-900/70 transition-all duration-200 flex flex-col gap-4 backdrop-blur-2xl"
>
  <img
    src={movieURL}
    alt={movie.overview}
    class="rounded-md aspect-[9/13] object-cover"
  />
  <h2 class="text-xl font-bold">
    {movie.title}
  </h2>
  <p>
    {movie.overview}
  </p>
</li>
